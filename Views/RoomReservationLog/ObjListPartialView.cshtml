@section styles{
}

@model IEnumerable<Meeting_room_dating.Reservation>
@foreach (var item in Model)
{
    <tr>
        <td>@item.RoomName</td>
        <td>@item.StartTime.Date</td>
        <td>@item.StartTime.ToShortTimeString() - @item.EndTime.ToShortTimeString()</td>
        <td>@item.PeopleNumber</td>
        <td>@item.Goal.Trim()</td>
        <td>@item.SubmitTime</td>
        <td>
            <button class="btn" onclick="GetUpdateObj('@item.RoomName','@item.StartTime.ToString("R")','@item.EndTime.ToString("R")')">
                修改
            </button>
        </td>
        <td>
            <button class="btn" onclick="DeleteObj('@item.RoomName','@item.StartTime.ToString("R")','@item.EndTime.ToString("R")')">
                刪除
            </button>
        </td>
    </tr>

}

@if (Model.Count() == 0)
{
<td id="alertWord" class="h3 my-4" style="color:red; text-align:center;" colspan="8">查無資料!</td>
}

