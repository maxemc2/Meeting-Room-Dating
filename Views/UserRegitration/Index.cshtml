@section scripts{
    <script>

        //確認是否帳號被註冊
        function CheckFormStatus() {
            var formValues = $("#queryForm").serialize();

            $.ajax({
                url: '@Url.Action("CheckObjStatus", "UserRegitration")',
                data: formValues,
                type: 'post',
                success: function (data) {
                    if (data) {
                        alert("該帳號已被使用!!");
                    }
                    else {
                        InsertObj();
                    }
                },
                fail: function () {
                    alert("該帳號已被使用!!");
                },
                error: function () {
                    alert("該帳號已被使用!!");
                }
            });
            return false;
        }

        //申請帳號
        function InsertObj() {
            var formValues = $("#queryForm").serialize();
            alert("!!");
            $.ajax({
                url: '@Url.Action("InsertObj", "UserRegitration")',
                data: formValues,
                type: 'post',
                success: function (data) {
                    if (data) {
                        alert("申請帳號成功!!");
                    }
                    else {
                        alert("申請帳號失敗!!");
                    }
                },
                error: function () {
                    alert("申請帳號失敗!!");
                },
                fail: function () {
                    alert("申請帳號失敗!!");
                }
            });
            return false;
        }
    </script>
}
