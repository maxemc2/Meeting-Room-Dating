<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">基本資料</h4>
            </div>
            <div class="card-body">
                <form id="queryForm" class="needs-validation">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="FirstName">名字</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                請輸入名字。
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="LastName">姓氏</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                請輸入姓氏。
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="UserName">使用者名稱</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@@</span>
                            </div>
                            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="使用者名稱" required="">
                            <div class="invalid-feedback" style="width: 100%;">
                                請輸入使用者名稱。
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="UserID">帳號</label>
                        <input type="text" class="form-control" id="UserID" name="UserID" required="">
                    </div>
                    <div class="mb-3">
                        <label for="Password">密碼</label>
                        <input type="text" class="form-control" id="Password" name="Password" required="">
                    </div>
                    <div class="mb-3">
                        <label for="Identity">身分</label>
                        <select class="form-control" id="Identity" name="Identity" required="">
                            <option value="">請選擇身分</option>
                            <option value="student">學生</option>
                            <option value="teacher">教師</option>
                            <option value="schoolStaff">校務人員</option>
                        </select>
                        <div class="invalid-feedback">
                            請選擇身分。
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Department">所屬系所</label>
                        <input type="text" class="form-control" id="Department" name="Department" placeholder="所屬系所，例：資工系" required="">
                        <div class="invalid-feedback">
                            請輸入系所。
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="IDNumber">身分證字號</label>
                        <input type="text" class="form-control" id="IDNumber" name="IDNumber" placeholder="例：A123456789" required="">
                        <div class="invalid-feedback">
                            請輸入身分證字號。
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Email">Email <span class="text-muted"></span></label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="例：you@example.com">
                        <div class="invalid-feedback">
                            請輸入正確的Email地址。
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="CheckFormStatus();">註冊</button>
                </form>
            </div>
        </div>
