<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">基本資料</h4>
            </div>
            <div class="card-body">
                <form class="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">名字</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                請輸入名字。
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">姓氏</label>
                            <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                請輸入姓氏。
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="username">使用者名稱</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@@</span>
                            </div>
                            <input type="text" class="form-control" id="username" placeholder="使用者名稱" required="">
                            <div class="invalid-feedback" style="width: 100%;">
                                請輸入使用者名稱。
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="identity">身分</label>
                        <select class="form-control" id="identity">
                            <option value="">請選擇身分</option>
                            <option value="student">學生</option>
                            <option value="teacher">教師</option>
                        </select>
                        <div class="invalid-feedback">
                            請選擇身分。
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="department">所屬系所</label>
                        <input type="text" class="form-control" id="department" placeholder="所屬系所，例：資工系" required="">
                        <div class="invalid-feedback">
                            請輸入系所。
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="IDnumber">身分證字號</label>
                        <input type="text" class="form-control" id="IDnumber" placeholder="例：A123456789" required="">
                        <div class="invalid-feedback">
                            請輸入身分證字號。
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email <span class="text-muted"></span></label>
                        <input type="email" class="form-control" id="email" placeholder="例：you@example.com">
                        <div class="invalid-feedback">
                            請輸入正確的Email地址。
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">註冊</button>
                </form>
            </div>
        </div>
